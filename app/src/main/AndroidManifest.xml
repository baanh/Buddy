<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buddy.main">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher_custom"
        android:roundIcon="@mipmap/icon_launcher_custom_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.buddy.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.buddy.activity.TaskNewEditActivity"
            android:label="New Task" />
        <activity android:name="com.buddy.activity.TaskGroupSelectActivity" />
        <activity android:name="com.buddy.activity.CategoryNewEditActivity"></activity>
        <activity android:name="com.buddy.activity.NotesActivity"/>
    </application>

</manifest>